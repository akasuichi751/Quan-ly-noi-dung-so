<form action="/contents/edit/<%= content.id %>" method="POST" class="content-form">
    <h2> edit noi dung</h2>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <label>Tiêu đề:</label>
    <input type="text" name="title" value="<%= content.title %>" required class="input-field">
    
    <label>Mô tả:</label>
    <textarea name="description" class="input-field"><%= content.description %></textarea>

    <label>Link media:</label>
    <input type="text" name="media_url" class="input-field" value="<%= content.media_url %>">

    <button type="submit">Lưu</button>
</form>
